// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model StockySkuReceipt {
  id              String   @id @default(cuid())
  shop            String
  sku             String
  firstReceivedAt DateTime?
  lastReceivedAt  DateTime?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())

  @@unique([shop, sku])
  @@index([shop])
}

model StockySyncState {
  shop        String   @id
  fullOffset  Int      @default(0)
  fullDone    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model ReportRunState {
  id               String   @id @default(cuid())
  shop             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Inputs used for the run
  periodQtySoldLTE Int
  lookBackDays     Int
  sinceISO         String

  // Progress
  cursor           String?
  done             Boolean  @default(false)
  processedOrders  Int      @default(0)

  // Aggregation map: { [variantGid]: { qtySold, firstSoldDate, lastSoldDate } }
  salesByVariant   Json     @default("{}")

  // Error visibility
  status           String   @default("running") // running | done | error
  error            String?

  @@index([shop, createdAt])
}
